
@{
    ViewData["Title"] = "Add";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}
@model ProductDto
<link href="~/Admin/css/add.css" rel="stylesheet" />
<script src="~/Admin/js/add.js"></script>
<section class="wrapper">
    <div class="form-w3layouts">
        <div class="row">
            <div class="col-lg-12">
                <section class="panel">
                    <header class="panel-heading">
                        Məhsul əlavə edilməsi
                    </header>
                    <div class="panel-body">
                        <div class="form">
                            <form enctype="multipart/form-data" method="post" asp-action="Add" asp-controller="Product">
                                <div class="form-group col-md-5 col-md-offset-3">
                                    <label>Adı</label>
                                    <input asp-for="ProductName" class="form-control" />
                                    <span class="text-danger" asp-validation-for="ProductName"></span>
                                </div>
                                <div class="form-group col-md-5 col-md-offset-3">
                                    <label>Qiyməti</label>
                                    <input asp-for="Price" class="form-control" />
                                    <span class="text-danger" asp-validation-for="Price"></span>
                                </div>
                                <div class="form-group col-md-5 col-md-offset-3">
                                    <label>Kateqoriya</label>
                                    <select asp-for="CategoryId" class="form-control">
                                        <option>---Seçim edin---</option>
                                    </select>
                                    <span class="text-danger" asp-validation-for="ProductName"></span>
                                </div>
                                <div class="form-group col-md-5 col-md-offset-3">
                                    <label>Şəkli</label>
                                    <div id="imgThumbnailPreview"> </div>
                                    <div>
                                        <label for="files" class="btn btn-primary col-md-2" style="display:block">Seç</label>
                                        <input id="files" style="display:none" name="Images" type="file" multiple />
                                    </div>
                                </div>
                                <div class="form-group col-md-5 col-md-offset-3">
                                    <input type="submit" class="btn btn-success" value="Yadda Saxla" />
                                </div>
                            </form>
                        </div>
                    </div>
                </section>
            </div>
        </div>
    </div>
</section>

<partial name="_ValidationScriptsPartial" />

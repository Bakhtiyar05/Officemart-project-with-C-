@model List<ProductDto>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}
<link href="~/Admin/css/productIndex.css" rel="stylesheet" />
<div class="customProductIndex">

    <p>
        <a asp-action="Add" class="btn btn-large d-block btn-success"><i class="fa fa-plus"></i> Yeni Məhsul</a>
    </p>
    <table class="table table-bordered">
        <thead>
            <tr>
                <th>
                    @Html.DisplayName("Şəkil")
                </th>
                <th>
                    @Html.DisplayName("Ad")
                </th>
                <th>
                    @Html.DisplayName("Qiymət")
                </th>
                <th>
                    @Html.DisplayName("Say")
                </th>
                <th>
                    @Html.DisplayName("Rəng")
                </th>
                <th>
                    @Html.DisplayName("Köhne qiymət")
                </th>
                <th>
                    @Html.DisplayName("Kateqoriya")
                </th>
                <th>
                    @Html.DisplayName("Əməliyyatlar")
                </th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
            <tr>
                <td>
                    <img width="120" height="110" src="~/img/@item.ProductImages.FirstOrDefault()" />
                </td>
                <td>
                    <p>
                        @Html.DisplayFor(modelItem => item.ProductName)
                    </p>

                </td>
                <td>
                    <p style="display:inline-block;">

                        @Html.DisplayFor(modelItem => item.Price)
                        <span>₼</span>
                    </p>
                </td>
                <td>
                    <p style="display:inline-block;">
                        @Html.DisplayFor(modelItem => item.Count)
                    </p>
                </td>
                @{
                    if (item.Color.ColorName != null)
                    {
                        <td>
                            <p style="display:inline-block;">
                                @Html.DisplayFor(modelItem => item.Color.ColorName)
                            </p>
                        </td>
                    }
                    else
                    {

                        <td>
                            <p style="display:inline-block;">
                                @Html.Display("Qeyd edilməyib")
                            </p>
                        </td>
                    }
                }
                <td>
                    <p>

                        @Html.DisplayFor(modelItem => item.DiscountPrice)
                    </p>
                </td>
                <td>
                    <p>

                        @Html.DisplayFor(modelItem => item.Category.CategoryName)
                    </p>
                </td>

                <td>
                    <div class="operations">
                        <a asp-action="Edit" asp-route-id="@item.Id"><i class="fa fa-edit btn btn-small btn-primary"></i></a> |
                        <a data-toggle="modal" data-target="#exampleModalCenter" id="@item.Id" onClick="reply_click(this.id)"><i class="fa fa-trash btn btn-small btn-danger deletedProduct"></i></a>
                    </div>
                </td>
            </tr>
            }
        </tbody>
    </table>

</div>

<div class="modal fade" id="exampleModalCenter" tabindex="-1" role="dialog" aria-labelledby="exampleModalCenterTitle" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="exampleModalLongTitle"> Diqqət! </h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                Məhsulu qalıcı olaraq silmək istəyirsiniz?
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-success" data-dismiss="modal">Imtina</button>
                <button type="button" id="delProduct" data-id="0" class="btn btn-danger">Sil</button>
            </div>
        </div>
    </div>
</div>
<script src="https://unpkg.com/sweetalert/dist/sweetalert.min.js"></script>

<script>

    function reply_click(clicked_id) {
        $("#delProduct").attr('data-id', clicked_id);
    }
    $(function () {


        $(document).on("click", "#delProduct", function () {
            var delid = $(this).attr("data-id");
            $.ajax({
                url: "/Admin/Product/Delete",
                data: { id: delid },
                type: "GET",
                success: function (res) {
                    if (res.status === "400") {
                        swal({
                            title: "Xəta",
                            text: "Elanı silmə uğursuz oldu.Düzgün məlumat daxil etdiyinizdən əmin olun!",
                            icon: "error",
                            button: "Ok",
                        });
                    } else {
                        swal("Uğurlu", "Elan Uğurla silindi", "success")
                            .then(willRedirect => {
                                if (willRedirect) {
                                    window.location.href = res.data;
                                }
                            })
                    }
                }
            })

        })
    })

</script>
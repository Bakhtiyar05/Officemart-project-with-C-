
@{
    ViewData["Title"] = "Edit";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

@model ProductDto

@{
    var categories = OfficeMart.Business.Infrastructure.Concrete.Library.GetInstance().Categories;
    var colors = OfficeMart.Business.Infrastructure.Concrete.Library.GetInstance().Colors;
    var productSizes = OfficeMart.Business.Infrastructure.Concrete.Library.GetInstance().ProductSizes;
}

<link href="~/Admin/css/add.css" rel="stylesheet" />
<script src="~/Admin/js/add.js"></script>
<section class="wrapper">
    <div class="form-w3layouts">
        <div class="row">
            <div class="col-lg-12">
                <section class="panel">
                    <header class="panel-heading">
                        Məhsul əlavə edilməsi
                    </header>
                    <div class="panel-body">
                        <div class="form">
                            <form enctype="multipart/form-data">
                                <div class="form-group col-md-5 col-md-offset-3">
                                    <label>Adı</label>
                                    <input id="ProductName" asp-for="ProductName" class="form-control" />
                                    <span class="text-danger" asp-validation-for="ProductName"></span>
                                </div>
                                <div class="form-group col-md-5 col-md-offset-3">
                                    <label>Qiyməti</label>
                                    <input id="Price" asp-for="Price" class="form-control" />
                                    <span class="text-danger" asp-validation-for="Price"></span>
                                </div>
                                <div class="form-group col-md-5 col-md-offset-3">
                                    <label>Köhnə qiymət</label>
                                    <input id="DiscountPrice" asp-for="DiscountPrice" class="form-control" />
                                    <span class="text-danger" asp-validation-for="DiscountPrice"></span>
                                </div>
                                <div class="form-group col-md-5 col-md-offset-3">
                                    <label>Sayı</label>
                                    <input id="Count" asp-for="Count" class="form-control" />
                                    <span class="text-danger" asp-validation-for="Count"></span>
                                </div>
                                <div class="form-group col-md-5 col-md-offset-3">
                                    <label>Kateqoriya</label>
                                    <select id="CategoryId" asp-for="CategoryId" asp-items="@categories" class="form-control">
                                        <option>---Seçim edin---</option>
                                    </select>
                                    <span class="text-danger" asp-validation-for="CategoryId"></span>
                                </div>
                                <div class="form-group col-md-5 col-md-offset-3">
                                    <label>Rəng</label>
                                    <select id="ColorId" asp-for="ColorId" asp-items="@colors" class="form-control">
                                    </select>
                                    <span class="text-danger" asp-validation-for="ColorId"></span>
                                </div>
                                <div class="form-group col-md-5 col-md-offset-3">
                                    <label>Ölçü</label>
                                    <select id="ProductSizeId" asp-for="ProductSizeId" asp-items="@productSizes" class="form-control">
                                    </select>
                                    <span class="text-danger" asp-validation-for="ProductSizeId"></span>
                                </div>
                                <div class="form-group col-md-5 col-md-offset-3">
                                    <label class="form-check-label" for="exampleCheck1">Xüsusi məhsuldurmu </label>
                                    <select class="form-control col-md-2" id="myselect">
                                        <option value="1">Xeyir</option>
                                        <option value="2">Bəli</option>
                                    </select>
                                </div>
                                <div class="form-group col-md-5 col-md-offset-3">
                                    <label>Haqqında</label>
                                    <textarea id="Description" asp-for="Description" class="form-control"></textarea>
                                </div>
                                <div class="form-group col-md-5 col-md-offset-3">
                                    <label>Şəkli</label>
                                    <div id="imgThumbnailPreview">
                                        @{
                                            var images = Model.ProductImages;
                                            if (images != null)
                                            {

                                                for (int i = 0; i < images.Count; i++)
                                                {
                                                    <div id=@i class="imgThumbContainer">
                                                        <div class="IMGthumbnail">
                                                            <img style="object-fit: fill" src="~/img/@images[i]" />
                                                        </div>
                                                        <span onclick=removeMe(@i) class="appended-span btn btn-danger border-0" style="display:block;text-align:center;color:white;">SIL</span>
                                                    </div>
                                                }
                                            }
                                        }
                                    </div>
                                </div>
                                <div class="form-group col-md-5 col-md-offset-3">
                                    <label for="files" class="btn btn-primary"><i class="fa fa-picture-o"></i>  Şəkil Seç</label>
                                    <span class="text-danger ml-1" asp-validation-for="ImageForEdit"></span>
                                    <input id="files" accept="image/*" name="ImageForEdit" type="file" style="visibility:hidden" asp-for="ImageForEdit" multiple />
                                    <input id="saveBtn" readonly class="btn btn-success" value="Yadda Saxla" />
                                </div>

                            </form>
                        </div>
                    </div>
                </section>
            </div>
        </div>
    </div>
</section>

<partial name="_ValidationScriptsPartial" />
<script src="https://unpkg.com/sweetalert/dist/sweetalert.min.js"></script>



<script>
    $(function () {

        $(document).on("click", "#saveBtn", function () {
            $.validator.unobtrusive.parse($('form'));
            $('form').validate();
            if ($('form').valid()) {
                var Src = [];
                $("img").each(function () {
                    var src = this.src;
                    if (src.includes('data') || src.includes('img')) {
                        Src.push(src);
                    }
                });
                var ProductName = $("#ProductName").val();
                var Price = $("#Price").val();
                var CategoryId = $("#CategoryId").val();
                var DiscountPrice = $("#DiscountPrice").val();
                var Count = $("#Count").val();
                var ColorId = $("#ColorId").val();
                var ProductSizeId = $("#ProductSizeId").val();
                var IsSpecial = $("#myselect option:selected").text() == "Xeyir" ? false : true;
                var Description = $("#Description").val();

                $.ajax({
                    url: "/Admin/Product/Edit",
                    data: { Id:@Model.Id, DiscountPrice: DiscountPrice, Price: Price, ProductName: ProductName, CategoryId: CategoryId, ColorId: ColorId, Count: Count, ProductSizeId: ProductSizeId, src: Src, IsSpecial: IsSpecial, Description: Description },
                    type: "POST",
                    success: function (res) {
                        console.log(res)
                        swal("Uğurlu", "Dəyişikliklər qeydə alındı", "success")
                            .then(willRedirect => {
                                if (willRedirect) {
                                    window.location.href = "/Admin/Product/Index";
                                }
                            });

                    }
                })
            }
            else {
            }
        })

    })
</script>



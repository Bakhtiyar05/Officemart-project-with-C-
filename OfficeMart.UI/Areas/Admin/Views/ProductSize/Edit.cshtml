
@{
    ViewData["Title"] = "Edit";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

@model ProductSizeDto


<section class="wrapper">
    <div class="form-w3layouts">
        <div class="row">
            <div class="col-lg-12">
                <section class="panel">
                    <header class="panel-heading">
                        Ölçü əlavə edilməsi
                    </header>
                    <div class="panel-body">
                        <div class="form">
                            <form>
                                <div class="form-group col-md-5 col-md-offset-3">
                                    <label>Adı</label>
                                    <input id="Size" asp-for="Size" class="form-control" />
                                    <span class="text-danger" asp-validation-for="Size"></span>
                                </div>

                                <div class="form-group col-md-5 col-md-offset-3">
                                    <input id="saveBtn" readonly class="btn btn-success" value="Yadda Saxla" />
                                    <a href="/Admin/Productsize" readonly class="btn btn-danger">Imtina</a>
                                </div>
                            </form>
                        </div>
                    </div>
                </section>
            </div>
        </div>
    </div>
</section>

<partial name="_ValidationScriptsPartial" />
<script src="https://unpkg.com/sweetalert/dist/sweetalert.min.js"></script>

<script>
    $(function () {

        $(document).on("click", "#saveBtn", function () {

            $.validator.unobtrusive.parse($('form'));
            $('form').validate();
            if ($('form').valid()) {
                var Src = [];
                $("img").each(function () {
                    var src = this.src;
                    if (src.includes('data')) {
                        Src.push(src);
                    }
                });

                var ProductSize = $("#Size").val();

                $.ajax({
                    url: "/Admin/ProductSize/Edit",
                    data: {id:@Model.Id,Size: ProductSize},
                    type: "POST",
                    success: function (res) {
                        swal("Uğurlu", "Ölçü Uğurla əlavə edildi", "success")
                            .then(willRedirect => {
                                if (willRedirect) {
                                    window.location.href = "/Admin/ProductSize/Index";
                                }
                            });
                    }
                })
            }
        })

    })
</script>
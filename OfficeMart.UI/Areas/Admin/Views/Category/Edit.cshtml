
@{
    ViewData["Title"] = "Edit";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

@model CategoryDto

<section class="wrapper">
    <div class="form-w3layouts">
        <div class="row">
            <div class="col-lg-12">
                <section class="panel">
                    <header class="panel-heading">
                        Kateqoriya yenilənməsi
                    </header>
                    <div class="panel-body">
                        <div class="form">
                            <form method="post" asp-controller="Category" asp-action="Add">
                                <input value="@Model.Id" hidden/>
                                <div class="form-group col-md-5 col-md-offset-3">
                                    <label>Adı</label>
                                    <input id="ProductName" asp-for="CategoryName" class="form-control" />
                                    <span class="text-danger" asp-validation-for="CategoryName"></span>
                                </div>
                                <div class="form-group col-md-5 col-md-offset-3">
                                    <input type="submit" readonly class="btn btn-success" value="Yadda Saxla" />
                                </div>
                            </form>
                        </div>
                    </div>
                </section>
            </div>
        </div>
    </div>
</section>

<partial name="_ValidationScriptsPartial" />
<script src="https://cdn.jsdelivr.net/npm/sweetalert2@9"></script>

@{
    if (Model != null && Model.IsSuccessfull)
    {
        <script>
            Swal.fire({
                position: 'top-end',
                icon: 'success',
                title: '"Kateqoriya uğurla yeniləndi..."',
                showConfirmButton: true
            })
            $(".swal2-confirm").click(function () {
                window.location ="/Admin/Category/CategoryList"
            });


        </script>
    }
}


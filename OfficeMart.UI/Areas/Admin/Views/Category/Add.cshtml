
@{
    ViewData["Title"] = "Add";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

@model CategoryDto

<section class="wrapper">
    <div class="form-w3layouts">
        <div class="row">
            <div class="col-lg-12">
                <section class="panel">
                    <header class="panel-heading">
                        Kateqoriya əlavə edilməsi
                    </header>
                    <div class="panel-body">
                        <div class="form">
                            <form method="post" asp-controller="Category" asp-action="Add">
                                <div class="form-group col-md-5 col-md-offset-3">
                                    <label>Adı</label>
                                    <input id="ProductName" asp-for="CategoryName" class="form-control" />
                                    <span class="text-danger" asp-validation-for="CategoryName"></span>
                                </div>
                                <div class="form-group col-md-5 col-md-offset-3">
                                    <input type="submit" readonly class="btn btn-success" value="Yadda Saxla" />
                                </div>
                            </form>
                        </div>
                    </div>
                </section>
            </div>
        </div>
    </div>
</section>

<partial name="_ValidationScriptsPartial" />
<script src="https://cdn.jsdelivr.net/npm/sweetalert2@9"></script>

@{
    if (Model != null && Model.IsSuccessfullAdded)
    {
        <script>
            Swal.fire({
                position: 'top-end',
                icon: 'success',
                title: '"Kateqoriya Uğurla əlavə edildi..."',
                showConfirmButton: true
            })
            $(".swal2-confirm").click(function () {
                window.location ="/Admin/Product/Index"
            });

                    
        </script>
    }
    else if(Model != null && !Model.IsSuccessfullAdded)
    {
        <script>
            Swal.fire({
                icon: 'error',
                title: 'Xəta...',
                text: 'Zəhmət olmasa administratora müraciət edin...!'
            })
        </script>
    }
}


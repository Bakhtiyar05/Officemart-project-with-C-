
@{
    ViewData["Title"] = "Restore";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@model RestorePasswordDto

<div id="content" class="site-content">
    <div id="primary" class="content-area width-normal">
        <main id="main" class="site-main">
            <div class="cont maincont">
                <h1 class="maincont-ttl">Hesab parametləri</h1>
                <ul class="b-crumbs">
                    <li><a asp-action="Index" asp-controller="Home">Əsas səhifə</a></li>
                    <li>Daxil ol & Qeydiyyat</li>
                </ul>
                <article class="page-cont">
                    <div class="page-styling">
                        <div class="auth-wrap">
                            <div style="float:none;margin:auto;" class="auth-col">
                                <div asp-validation-summary="ModelOnly"></div>
                                <form asp-action="Restore" asp-controller="Account" method="post" class="register">

                                    <p>
                                        <label for="reg_password">Mövcud şifrə <span class="required">*</span></label>
                                        <input type="password" id="reg_password" placeholder="Şifrə..." asp-for="Password">
                                        <span class="text-danger" asp-validation-for="Password"></span>
                                    </p>
                                    <p>
                                        <label for="conf_password">Yeni şifrə <span class="required">*</span></label>
                                        <input type="password" placeholder="Yeni şifrə..." asp-for="ConfPassword">
                                        <span class="text-danger" asp-validation-for="ConfPassword"></span>
                                    </p>
                                    <p>
                                        <label for="SecondConfPassword">Yeni şifrə <span class="required">*</span></label>
                                        <input type="password" placeholder="Yeni şifrə..." asp-for="SecondConfPassword">
                                        <span class="text-danger" asp-validation-for="SecondConfPassword"></span>
                                    </p>
                                    <p>
                                        <label for="phone-number">Əlaqə nömrəsi<span class="required">*</span></label>
                                        <input type="tel" id="phone" placeholder="(0**)-***-****" asp-for="PhoneNumber">
                                        <span class="text-danger" asp-validation-for="PhoneNumber"></span>
                                    </p>
                                    <p class="auth-submit">
                                        <input type="submit" value="Yadda saxla">
                                    </p>
                                </form>
                            </div>
                        </div>
                    </div>
                </article>
            </div>
        </main>
    </div>
</div>

<script src="https://code.jquery.com/jquery-3.5.1.min.js"></script>
<partial name="_ValidationScriptsPartial" />
<script>
    document.getElementById('phone').addEventListener('input', function (e) {
        var x = e.target.value.replace(/\D/g, '').match(/(\d{0,3})(\d{0,3})(\d{0,4})/);
        e.target.value = !x[2] ? x[1] : '(' + x[1] + ') ' + x[2] + (x[3] ? '-' + x[3] : '');
    });
</script>
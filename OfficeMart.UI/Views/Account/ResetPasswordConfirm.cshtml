
@{
    ViewData["Title"] = "ResetPasswordConfirm";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


@model EmailPassResentDto

<div id="content" class="site-content">
    <div id="primary" class="content-area width-normal">
        <main id="main" class="site-main">
            <div class="cont maincont">
                <h1 class="maincont-ttl">Hesab parametləri</h1>
                <ul class="b-crumbs">
                    <li><a asp-action="Index" asp-controller="Home">Əsas səhifə</a></li>
                    <li>Şifrə Bərpası</li>
                </ul>
                <article class="page-cont">
                    <div class="page-styling">
                        <div class="auth-wrap">
                            <div style="float:none;margin:auto;" class="auth-col">
                                <div asp-validation-summary="ModelOnly"></div>
                                <form asp-action="ResetPasswordConfirm" asp-controller="Account"  method="post" class="register">
                                  <input type="hidden" name="email" value="@Model.email"/>
                                    <p>
                                        <label for="conf_password">Yeni şifrə <span class="required">*</span></label>
                                        <input type="password" placeholder="Yeni şifrə..." asp-for="ConfPassword">
                                        <span class="text-danger" asp-validation-for="ConfPassword"></span>
                                    </p>
                                    <p>
                                        <label for="SecondConfPassword">Yeni şifrə <span class="required">*</span></label>
                                        <input type="password" placeholder="Yeni şifrə..." asp-for="SecondConfPassword">
                                        <span class="text-danger" asp-validation-for="SecondConfPassword"></span>
                                    </p>
                                    <p class="auth-submit">
                                        <input type="submit" value="Yadda saxla">
                                    </p>
                                </form>
                            </div>
                        </div>
                    </div>
                </article>
            </div>
        </main>
    </div>
</div>

<script src="https://code.jquery.com/jquery-3.5.1.min.js"></script>
<partial name="_ValidationScriptsPartial" />
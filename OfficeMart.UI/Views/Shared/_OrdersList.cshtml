@model List<OrderNumberDto>

@{ 
    var routeValue = Model.Select(x => x.RootValue).FirstOrDefault();
}

<div class="com-md-12">
    <input value="@routeValue" hidden id="routeValue"/>
    <div class="form-group row col-md-2 col-md-offset-2">
        <label for="example-date-input" class="col-2 col-form-label" style="font-size:14px">Başlanğıc tarixi</label>
        <div class="col-10">
            <input class="form-control" type="date" id="beginDate">
        </div>
    </div>
    <div class="form-group row col-md-2" style="margin-left:1%">
        <label for="example-date-input" class="col-2 col-form-label" style="font-size:14px">Son tarix</label>
        <div class="col-10">
            <input class="form-control" type="date" id="endDate">
        </div>
    </div>
    <div class="form-group row col-md-2" style="margin-left:1%">
        <label for="example-search-input" class="col-2 col-form-label"></label>
        <div class="col-10">
            <button class="btn btn-primary" id="submitSearch">Axtarış</button>
        </div>
    </div>
</div>

<section class="wrapper">
    <div class="table-agile-info">
        <div class="panel panel-default">
            <div class="panel-heading">
                Sifarişlər
            </div>
            <div>
                <table class="table" ui-jq="footable" ui-options='{
        "paging": {
          "enabled": true
        },
        "filtering": {
          "enabled": true
        },
        "sorting": {
          "enabled": true
        }}'>
                    <thead class="text-center">
                        <tr>
                            <th data-breakpoints="xs" class="text-center">Sıra №</th>
                            <th class="text-center">Sifarişçi</th>
                            <th class="text-center">Əlaqə</th>
                            <th class="text-center" data-breakpoints="xs">Çatdırılma ünvanı</th>
                            <th class="text-center" data-breakpoints="xs" data-title="DOB">Sifariş tarixi</th>
                            <th class="text-center" data-breakpoints="xs sm md">Ətraflı</th>
                        </tr>
                    </thead>
                    <tbody class="text-center" id="tableBody">
                        @{
                            int counter = 1;
                            foreach (var item in Model)
                            {
                                <tr data-expanded="true" id="trBody">
                                    <td id="rowNumber">@counter</td>
                                    <td id="buyerNameSurname">@item.Orders.Select(x => x.BuyerName + " " + x.BuyerSurname).FirstOrDefault()</td>
                                    <td id="buyerPhone">@item.Orders.Select(x => x.BuyerPhone).FirstOrDefault()</td>
                                    <td id="deliveryAddress">@item.Orders.Select(x => x.DeliveryAddress).FirstOrDefault()</td>
                                    <td id="regDate">@item.Orders.Select(x => x.RegDate.ToString("dd-MM-yyyy")).FirstOrDefault()</td>
                                    <td id="orderDetail">
                                        <a asp-controller="Order" asp-action="OrderDetail" asp-route-id="@item.Id" target="_blank">
                                            <i class="fa fa-info btn btn-info"></i>
                                        </a>
                                    </td>
                                </tr>
                                counter++;
                            }

                        }

                    </tbody>
                </table>
            </div>
        </div>
    </div>
</section>
<script src="~/Admin/js/Orders/SearchingOrders.js"></script>
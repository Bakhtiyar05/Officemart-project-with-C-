@{ ViewData["Title"] = "Haqqımızda"; }

<div id="content" class="site-content">
    <div id="primary" class="content-area width-full">
        <main id="main" class="site-main">
            <div class="cont">
                <h1 class="maincont-ttl">Haqqımızda</h1>

                <ul class="b-crumbs" style="display:none">
                    <li><a href="index.html">Home</a></li>
                    <li>Contacts</li>
                </ul>
            </div>
            <div class="maincont page-styling page-full">
                <div class="cont row-wrap-boxed contacts-page">
                    <div class="page-cont">
                        <div class="row">
                            <div class="cf-lg-4 col-sm-4">
                                <h3>Məlumat</h3>
                                <p>OfficeMart sizin istədiyiniz növ office ləvazimatlarını qapınıza çatdırır.</p>
                                <br>
                                <h3>Ünvan</h3>
                                <p>Caspian Plaza</p>
                                <br>
                                <h3>Email</h3>
                                <p><a>officemart@gmail.com</a></p>
                                <br>
                            </div>
                            <div class="cf-lg-4 col-sm-4">
                                <div class="vc_column-inner ">
                                    <div class="wpb_wrapper">
                                        <h3>Əlaqə</h3>
                                        <p>(994) 70 700 77 77</p>
                                        <br>
                                        <br>
                                    </div>
                                </div>
                            </div>
                            <div class="cf-lg-4 col-sm-4">
                                <div class="vc_column-inner ">
                                    <div class="wpb_wrapper">
                                        <h3 class="mb20">Bizimlə əlaqə</h3>
                                        <form asp-action="Contact" asp-controller="About" method="post"
                                              class="form-validate wpcf7 wpcf7-form">
                                            <p class="wpcf7-form-control-wrap"><input type="text" data-required="text" name="name" placeholder="Ad"></p>
                                            <p class="wpcf7-form-control-wrap"><input type="email" data-required-email="email" name="email" data-required="text" placeholder="E-mail"></p>
                                            <p class="wpcf7-form-control-wrap"><input type="text" data-required="text" name="phone" placeholder="Əlaqə nömrəsi"></p>
                                            <p class="wpcf7-form-control-wrap"><input type="text" data-required="text" name="message" placeholder="Mesaj"></p>
                                            <p><input type="submit" value="Send"></p>
                                        </form>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="page-styling row-wrap-full contacts-page-map" style="display:none">
                    <iframe src="https://shorturl.at/ahBFW" width='100%' height="450" allowfullscreen></iframe>
                </div>
            </div>
        </main>
    </div>
</div>